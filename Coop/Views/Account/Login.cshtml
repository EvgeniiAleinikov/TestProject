@model LoginModel

@{
    ViewBag.Title = "Login";
}

<div id="login">
    <h3 class="text-center text-white pt-5">Login form</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary()
                        <h3 class="text-center text-primary">Войти</h3>
                        <div class="form-group">
                            <label for="emailId" class="text-primary">Электронная почта:</label><br>
                            <input type="text" name="Email" id="emaiLId" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-primary">Пароль:</label><br>
                            <input type="text" name="Password" id="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="remember-me" class="text-primary"><span>Запомнить</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                            <input type="submit" name="Войти" class="btn btn-primary btn-md" value="submit">
                        </div>
                   }
                </div>
            </div>
        </div>
    </div>
</div>